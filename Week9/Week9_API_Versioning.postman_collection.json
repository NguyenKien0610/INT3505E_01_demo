    {
      "name": "2. V1 Endpoints (Deprecated)",
      "item": [
        {
          "name": "V1 - Create Payment",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has payment_id\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('payment_id');",
                  "    pm.environment.set(\"V1_PAYMENT_ID\", jsonData.payment_id);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"amount\": 100.50,\n    \"currency\": \"USD\",\n    \"customer_id\": \"CUST_001\",\n    \"description\": \"Test payment V1\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/v1/payments",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "v1", "payments"]
            }
          },
          "response": []
        },
        {
          "name": "V1 - Get Payment",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/v1/payments/{{V1_PAYMENT_ID}}",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "v1", "payments", "{{V1_PAYMENT_ID}}"]
            }
          },
          "response": []
        }
