    {
      "name": "4. Idempotency Tests",
      "item": [
        {
          "name": "Idempotency - Request 1",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"IDEM_PAYMENT_ID\", jsonData.payment_id);",
                  "",
                  "pm.test(\"Payment ID saved\", function () {",
                  "    pm.expect(pm.environment.get(\"IDEM_PAYMENT_ID\")).to.not.be.undefined;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"amount\": 99.99,\n    \"currency\": \"USD\",\n    \"customer_id\": \"CUST_003\",\n    \"payment_method\": \"e_wallet\",\n    \"idempotency_key\": \"UNIQUE_KEY_12345\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/v2/payments",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "v2", "payments"]
            }
          },
          "response": []
        },
        {
          "name": "Idempotency - Request 2 (Same Key)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Returns same payment_id\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    var firstPaymentId = pm.environment.get(\"IDEM_PAYMENT_ID\");",
                  "    pm.expect(jsonData.payment_id).to.equal(firstPaymentId);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"amount\": 99.99,\n    \"currency\": \"USD\",\n    \"customer_id\": \"CUST_003\",\n    \"payment_method\": \"e_wallet\",\n    \"idempotency_key\": \"UNIQUE_KEY_12345\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/v2/payments",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "v2", "payments"]
            }
          },
          "response": []
        }
      ]
